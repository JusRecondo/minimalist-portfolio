---
import Section from '@/components/Section.astro'
import { Icon } from 'astro-icon/components'
import { isLangSpanish } from '@/lib/utils'
import { skills } from '@cv'
import { skillsTexts, skillsTextsES } from '@texts'

//Translations
const { url } = Astro.request
const { title } = isLangSpanish(url) ? skillsTextsES : skillsTexts
---

<Section 
    title={title}
    customClass="skills"
>
    <ul>
        {
            skills &&
                skills.map(({ name, iconName }) => (
                    <li>
                        <Icon name={iconName} />
                        {name}
                    </li>
                ))
        }
    </ul>
</Section>

<style>
    ul {
        display: flex;
        flex-wrap: wrap;
        gap: 8px;
    }

    li {
        display: flex;
        align-items: center;
        gap: 4px;
        border-radius: 6px;
        padding: 0.1rem 0.4rem;
        background: var(--color-neutral-1);
        color: var(--color-dark);
        font-size: 0.9rem;
        font-weight: 500;
    }

    @media (min-width: 768px) {
        ul {
            gap: 10px; 
        } 
    }
</style>
